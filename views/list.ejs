<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(e=>{ %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" value="<%= e._id %>" name="checkbox" onChange="this.form.submit()">
          <p><%= e.name %></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>" id=""></input>
      </form>
    <% }) %>
      

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
